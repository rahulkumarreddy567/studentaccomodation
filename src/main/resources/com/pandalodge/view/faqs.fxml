                    <Label text="&lt;5min" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #f59e0b;"/>
                    <Label text="Response" style="-fx-font-size: 12px; -fx-text-fill: #6b7280;"/>
                </VBox>
            </HBox>

            
            <VBox fx:id="faqContainer" spacing="12" maxWidth="800" minWidth="600" alignment="TOP_CENTER">
