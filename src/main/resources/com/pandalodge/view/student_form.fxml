<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="20" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.pandalodge.controller.StudentFormController" styleClass="root" style="-fx-background-color: white;">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40" />
    </padding>
    
    <VBox spacing="5" style="-fx-padding: 0 0 10 0;">
        <Label text="Student Details" styleClass="search-hero-title" style="-fx-font-size: 20px; -fx-text-fill: -text-main;" />
        <Label text="Enter information to register a new student" styleClass="text-muted" style="-fx-font-size: 13px;" />
        <Label fx:id="statusLabel" alignment="CENTER" maxWidth="Infinity" style="-fx-font-weight: bold;" />
    </VBox>

    <VBox spacing="15">
        <VBox spacing="8">
            <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: -text-main;" />
            <TextField fx:id="nameField" promptText="e.g. Jean Dupont" styleClass="dashboard-search-field" prefHeight="45" />
        </VBox>

        <VBox spacing="8">
            <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: -text-main;" />
            <TextField fx:id="emailField" promptText="e.g. jean.dupont@etna.fr" styleClass="dashboard-search-field" prefHeight="45" />
        </VBox>

        <VBox fx:id="passwordBox" spacing="8">
            <Label text="Temporary Password" style="-fx-font-weight: bold; -fx-text-fill: -text-main;" />
            <PasswordField fx:id="passwordField" promptText="Enter initial password" styleClass="dashboard-search-field" prefHeight="45" />
        </VBox>
    </VBox>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="cancelBtn" text="Cancel" styleClass="link-button" />
        <Button fx:id="okBtn" text="Save Student" styleClass="btn-primary-dashboard" prefHeight="45" prefWidth="150" />
    </HBox>
</VBox>

