<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="25" alignment="TOP_LEFT" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" 
      fx:controller="com.pandalodge.controller.FAQManagementController" styleClass="root">
    <padding>
        <Insets top="30" right="40" bottom="30" left="40" />
    </padding>

    <!-- Top Navigation Block -->
    <HBox alignment="CENTER_LEFT" spacing="20">
        <Button text="â† Back" onAction="#onBack" styleClass="link-button" />
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="FAQ Management" styleClass="search-hero-title" style="-fx-font-size: 28px;" />
            <Label text="Update resources and help content for your users" styleClass="text-muted" style="-fx-font-size: 14px;" />
        </VBox>
        <Button text="+ Add FAQ" onAction="#onAddFAQ" styleClass="btn-primary-dashboard" prefHeight="45" prefWidth="150" />
    </HBox>

    <!-- Search and Status -->
    <HBox spacing="15" alignment="CENTER_LEFT">
        <TextField fx:id="searchField" promptText="ðŸ” Search FAQs by question or category..." 
                   HBox.hgrow="ALWAYS" styleClass="dashboard-search-field" prefHeight="45" />
        <Label fx:id="statusLabel" style="-fx-font-weight: bold; -fx-text-fill: -primary-color;" />
    </HBox>

    <!-- Table Container -->
   <VBox VBox.vgrow="ALWAYS" styleClass="card" style="-fx-padding: 0; -fx-background-radius: 12; -fx-overflow: hidden;">
        <TableView fx:id="faqTable" VBox.vgrow="ALWAYS" style="-fx-background-radius: 12; -fx-background-color: transparent;">
            <columns>
                <TableColumn fx:id="idColumn" text="ID" prefWidth="60" />
                <TableColumn fx:id="categoryColumn" text="Category" prefWidth="150" />
                <TableColumn fx:id="questionColumn" text="Question" prefWidth="600" />
            </columns>
            <placeholder>
                <Label text="No FAQs found." styleClass="text-muted" />
            </placeholder>
        </TableView>
    </VBox>
</VBox>
