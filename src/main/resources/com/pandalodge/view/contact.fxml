<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.*?>

<ScrollPane fitToWidth="true" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.pandalodge.controller.ContactController"
            styleClass="root">
    <VBox spacing="0" alignment="TOP_CENTER" style="-fx-background-color: #f8fafc;">
        
        <!-- Header Navigation -->
        <HBox styleClass="header-clean" alignment="CENTER" spacing="20" minHeight="70">
            <padding><Insets top="15" right="40" bottom="15" left="40"/></padding>
            <Button text="â† Back" onAction="#onHome" styleClass="btn-nav" style="-fx-font-size: 14px;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="ðŸ¼ Panda Stays" styleClass="header-logo"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Contact Us" style="-fx-font-size: 14px; -fx-text-fill: #6b7280;"/>
        </HBox>

        <!-- Hero Section -->
        <VBox alignment="CENTER" spacing="15" style="-fx-background-color: linear-gradient(to bottom, #4f46e5, #6366f1); -fx-padding: 60 40;">
            <Label text="Get in Touch" style="-fx-font-size: 42px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            <Label text="We're here to help you find your perfect student home."
                   style="-fx-font-size: 18px; -fx-text-fill: rgba(255,255,255,0.9);"/>
        </VBox>

        <!-- Main Content -->
        <HBox spacing="40" alignment="TOP_CENTER" style="-fx-padding: 60 80;">
            
            <!-- Contact Form -->
            <VBox spacing="25" prefWidth="600" style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.05), 20, 0, 0, 10);">
                <Label text="Send us a Message" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e293b;"/>
                
                <GridPane vgap="20" hgap="20">
                    <columnConstraints>
                        <ColumnConstraints percentWidth="50"/>
                        <ColumnConstraints percentWidth="50"/>
                    </columnConstraints>
                    
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="0">
                        <Label text="Full Name" style="-fx-font-weight: bold; -fx-text-fill: #475569;"/>
                        <TextField fx:id="nameField" promptText="Enter your name" styleClass="contact-input" prefHeight="45"
                                   style="-fx-background-radius: 10; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-padding: 0 15;"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="1" GridPane.rowIndex="0">
                        <Label text="Email Address" style="-fx-font-weight: bold; -fx-text-fill: #475569;"/>
                        <TextField fx:id="emailField" promptText="Enter your email" styleClass="contact-input" prefHeight="45"
                                   style="-fx-background-radius: 10; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-padding: 0 15;"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                        <Label text="Subject" style="-fx-font-weight: bold; -fx-text-fill: #475569;"/>
                        <TextField fx:id="subjectField" promptText="What is this about?" styleClass="contact-input" prefHeight="45"
                                   style="-fx-background-radius: 10; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-padding: 0 15;"/>
                    </VBox>
                    
                    <VBox spacing="8" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2">
                        <Label text="Message" style="-fx-font-weight: bold; -fx-text-fill: #475569;"/>
                        <TextArea fx:id="messageArea" promptText="How can we help you?" prefHeight="150" wrapText="true"
                                  style="-fx-background-radius: 10; -fx-border-color: #e2e8f0; -fx-border-radius: 10; -fx-padding: 10;"/>
                    </VBox>
                </GridPane>
                
                <Button text="Send Message" onAction="#handleSendMessage" maxWidth="Infinity" prefHeight="50"
                        style="-fx-background-color: #6366f1; -fx-background-radius: 12; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16px; -fx-cursor: hand; -fx-effect: dropshadow(gaussian, rgba(99,102,241,0.3), 10, 0, 0, 4);"/>
                <Label fx:id="statusLabel" visible="false" style="-fx-font-size: 14px;"/>
            </VBox>
            
            <!-- Contact Info Sidebar -->
            <VBox spacing="30" prefWidth="350">
                <VBox spacing="20" style="-fx-background-color: #1e293b; -fx-background-radius: 20; -fx-padding: 30;">
                    <Label text="Contact Information" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="ðŸ“§" style="-fx-font-size: 24px;"/>
                        <VBox>
                            <Label text="Email us" style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;"/>
                            <Label text="support@pandastays.com" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        </VBox>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="ðŸ“ž" style="-fx-font-size: 24px;"/>
                        <VBox>
                            <Label text="Call us" style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;"/>
                            <Label text="+33 1 23 45 67 89" style="-fx-text-fill: white; -fx-font-weight: bold;"/>
                        </VBox>
                    </HBox>
                    
                    <HBox spacing="15" alignment="CENTER_LEFT">
                        <Label text="ðŸ“" style="-fx-font-size: 24px;"/>
                        <VBox>
                            <Label text="Visit us" style="-fx-text-fill: #94a3b8; -fx-font-size: 13px;"/>
                            <Label text="123 Rue de la Paix, Paris, FR" style="-fx-text-fill: white; -fx-font-weight: bold;" wrapText="true"/>
                        </VBox>
                    </HBox>
                </VBox>
                
                <!-- Social Media section removed -->

            </VBox>
        </HBox>

        <!-- Footer -->
        <VBox styleClass="footer-modern" spacing="40">
            <padding>
                <Insets top="60" right="40" bottom="30" left="40" />
            </padding>
            <HBox spacing="80" alignment="TOP_CENTER">
                <!-- Brand Column -->
                <VBox spacing="15" minWidth="200">
                    <Label text="ðŸ¼ Panda Stays" styleClass="footer-brand"/>
                    <Label text="Simplifying student housing search across Europe. Find your home away from home." 
                           wrapText="true" styleClass="footer-desc" maxWidth="250"/>
                </VBox>

                <!-- Quick Links Column -->
                <VBox styleClass="footer-column" minWidth="120">
                    <Label text="Quick Links" styleClass="footer-title"/>
                    <Label text="Home" styleClass="footer-link" onMouseClicked="#onHome" style="-fx-cursor: hand;"/>
                    <Label text="Browse" styleClass="footer-link" onMouseClicked="#onViewRooms" style="-fx-cursor: hand;"/>
                    <Label text="Dashboard" styleClass="footer-link" onMouseClicked="#onDashboard" style="-fx-cursor: hand;"/>
                </VBox>

                <!-- Support Column -->
                <VBox styleClass="footer-column" minWidth="120">
                    <Label text="Support" styleClass="footer-title"/>
                    <Label text="Help Center" styleClass="footer-link" onMouseClicked="#openFAQs" style="-fx-cursor: hand;"/>
                    <Label text="Contact Us" styleClass="footer-link" onMouseClicked="#onContact" style="-fx-cursor: hand;"/>
                    <Label text="FAQs" styleClass="footer-link" onMouseClicked="#openFAQs" style="-fx-cursor: hand;"/>
                </VBox>

                <!-- Legal Column -->
                <VBox styleClass="footer-column" minWidth="120">
                    <Label text="Legal" styleClass="footer-title"/>
                    <Label text="Privacy Policy" styleClass="footer-link"/>
                    <Label text="Terms of Service" styleClass="footer-link"/>
                    <Label text="Cookie Policy" styleClass="footer-link"/>
                </VBox>
            </HBox>

           <VBox spacing="15" alignment="CENTER">
                <Separator opacity="0.1" maxWidth="1000"/>
                <Label text="Â© 2026 Panda Stays. All rights reserved." styleClass="footer-copyright"/>
            </VBox>
        </VBox>

    </VBox>
</ScrollPane>
